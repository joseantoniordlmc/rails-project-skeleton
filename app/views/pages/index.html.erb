<!-- app/views/travel/index.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
       


      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: access_token_path, method: 'get', local: true) do %>
          <%= button_tag 'Get Access Token', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>

       <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: mydata_path, method: 'get', local: true) do %>
          <%= button_tag 'My Data', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>

      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :subreddit, 'Search for a subreddit links '%>
            <%= text_field_tag :subreddit, nil, placeholder: 'r/', class: 'form-control' %>
          </div>
          <%= button_tag 'Search Subreddit', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>

     <% if flash[:alert] %>
          <div class="alert alert-warning"><%= flash[:alert] %></div>
        <% end %>
        <% if flash[:success] %>
          <div class="alert alert-success"><%= flash[:success] %></div>
        <% end %>


  </div>
</div>